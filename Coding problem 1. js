// Create a new JavaScript file named userProfile.js.
// Collect the following user information with the use of prompt():
// Full Name (first and last name)
// Age
// Favorite Number
// Favorite Color
// Use these variables to store the collected information and log it in the console.

let fullName = prompt("Please enter your full name (first and last name):");
let age = prompt("Please enter your age:");
let favoriteNumber = prompt("Please enter your favorite number:");
let favoriteColor = prompt("Please enter your favorite color:");

console.log("Full Name: " + fullName);
console.log("Age: " + age);
console.log("Favorite Number: " + favoriteNumber);
console.log("Favorite Color: " + favoriteColor);

